mixin section(title, paragraph, comment, description, text)
  .section
    //- Master Degree / Company name
    if (title === 'experience')
      span.section__paragraph.section__paragraph-experience= paragraph
    
    if (title === 'education')
      span.section__paragraph.section__paragraph-education= paragraph

    //- // Feb 2011 - Jun 2014
    .section__comment
      if (title === 'experience')
        p.section__comment-experience= comment
      
      if (title === 'education')
        p.section__comment-education= comment

    //- University name / Your job here
    .section__description
      if (title === 'experience')
        p.section__description-experience= description
        
      if (title === 'education')
        p.section__description-education= description
    
    //- Lorem ipsum...
    .section__position
      p.section__content= text